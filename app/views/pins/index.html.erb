<%= render 'layouts/home' unless user_signed_in? %>

<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
<h1>Listing Pins</h1>
<% end %>

<div id="pins" class="transitions-enable clearfix">
  <% @pins.each do |pin| %>
    <div class="box panel panel-default">
      <%= link_to image_tag(pin.image.url(:medium)), pin %>
      <div class="panel-body">
        <h5><%= pin.description %></h5>
        <p><spam class="glyphicon glyphicon-user" aria-hidden="true"></spam> <strong><%= pin.user.email if pin.user %></strong><p>
      </div>
        <% if pin.user == current_user %>
          <div class="panel-footer text-center">
          <%= link_to edit_pin_path(pin) do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
            Edit &nbsp;&nbsp;
          <% end %>
          <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            Delete
          <% end %>
          </div>
        <% end %>
    </div>
  <% end %>
</div>
